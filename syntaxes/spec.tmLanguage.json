{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "EVM Spec",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#declaration-rule"
		},
		{
			"include": "#declaration-invariant"
		},
		{
			"include": "#declaration-methods"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.spec",
				"match": "\\b(rule|invariant|methods)\\b"
			}, {
				"name": "keyword.other.unit.spec",
				"match": "\\b(invoke|sinvoke)\\b"
			}, {
				"name": "keyword.other.unit.spec",
				"match": "\\b(envfree)\\b"
			}, {
					"name": "keyword.other.unit.spec",
					"match": "\\b(env|msg)\\b"

			}]
		},
		"strings": {
			"name": "string.quoted.double.spec",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.spec",
					"match": "\\\\."
				}
			]
		},
		"declaration-rule": {
            "patterns": [
                {
					"match": "\\b(rule)\\s+([A-Za-z_]\\w*)\\b",
                    "captures": {
                        "1": {
                            "name": "declaration.type.rule.spec"
                        },
                        "2": {
                            "name": "entity.name.rule.spec"
                        }
					},
					"include": "source.solidity"
                }
            ]
		},
		"declaration-invariant": {
            "patterns": [
                {
                    "match": "\\b(invariant)\\s+([A-Za-z_]\\w*)\\b",
                    "captures": {
                        "1": {
                            "name": "declaration.type.invariant.spec"
                        },
                        "2": {
                            "name": "entity.name.invariant.spec"
                        }
                    }
                }
            ]
		},
		"declaration-methods": {
            "patterns": [
                {
                    "match": "\\b(methods)\\b",
                    "captures": {
                        "1": {
                            "name": "declaration.type.methods.spec"
                        }
                    }
                }
            ]
        }
	},
	"scopeName": "source.spec"
}